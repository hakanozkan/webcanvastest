        <script src="hand.minified-1.2.js"></script>
        <script src="cannon.js"></script>
        <script src="Oimo.js"></script>
        <script src="babylon.2.2.max.js"></script>
		<style>
            html, body {
                overflow: hidden;
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #renderCanvas {
                width: 100%;
                height: 100%;
                touch-action: none;
            }
